<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-center bg-cover bg-[url('https://t4.ftcdn.net/jpg/05/49/86/39/360_F_549863991_6yPKI08MG7JiZX83tMHlhDtd6XLFAMce.jpg')] flex items-center justify-center">
    <div class="w-96 h-[60vh] bg-white px-10 py-5 rounded-md">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 leading-none capitalize tracking-tighter" >Welcome to pinterest.</h1>
      <form action="/login" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-blue-400 text-white" type="submit" value="Login">
        <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot password</a>
        <p class="text-xs font-semibold text-zinc-700 text-center mt-10 w-2/3 mx-auto">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge that you've read out Privacy Policy</p>
      </form>
      <a class="inline-block mt-19 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't have an account?Register</a>
    </div>
  </div>
