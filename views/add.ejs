<% include ./partials/header.ejs %>
    <div class="e-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Create a new post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class=" block w-45 px-3 py-2" type="file" name="postimage">
            <input class="text-black block w-45 px-3 py-2 mt-2 border-2 rounded-md " type="text" placeholder="Title" name="title">
            <textarea class="text-black block w-45 h-45 px-3 py-2 mt-2 border-2 rounded-md " type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-45 px-3 py-2 mt-2 bg-red-400 rounded-lg " type="submit" value="Create">
        </form>
    </div>
