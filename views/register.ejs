<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-zinc-500 flex items-center justify-center">
    <div class="w-96 h-[70vh] bg-white px-10 py-5 rounded-md">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 leading-none capitalize tracking-tighter mb-9" >Create new Account</h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="name" placeholder="Fullname">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="Number">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-blue-400 text-white" type="submit" value="Create new Account">
        <p class="text-xs font-semibold text-zinc-700 text-center mt-10 w-2/3 mx-auto">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge that you've read out Privacy Policy</p>
      </form>
      <a class="inline-block mt-19 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login existing account</a>
    </div>
  </div>
<% include ./partials/footer.ejs %>
